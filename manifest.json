{
  "manifest_version": 2,
  "name": "LiveEngage Helper",
  "description": "A tool to help use the LiveEngage platform",
  "version": "1.0",
  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": [
      "eventPage.js"
    ],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "css": [
        "mystyles.css"
      ],
      "js": [
      ]
    }
  ],
  "permissions": [
    "activeTab",
    "<all_urls>"
  ]
}